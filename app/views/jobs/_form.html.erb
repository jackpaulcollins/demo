<%= form_with(model: job) do |form| %>
  <% if job.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% job.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div data-controller="form-element">
    <%= form.button "Validate", formaction: new_job_path, formmethod: :get, data: { turbo_frame: :job_template_field, form_element_target: "submitbtn" } %>

    <div>
      <%= form.label :job_type, style: "display: block" %>
      <%= form.collection_select :job_template_id, JobTemplate.all, :id, :title, {include_blank: true}, { data: { action: "change->form-element#remotesubmit"}} %>
    </div>
  </div>

  <%= turbo_frame_tag :job_template_field do %>

  <%= job.job_template %>

    <% if job.job_template.present? %>
      <%= form.fields_for :job_attribute_answers_attributes do |f|%>
        <% job.job_template.job_attributes.each do |attribute| %>
          <%= f.label attribute.name %>
          <%= f.text_field :answer%>
          <%= f.hidden_field :job_attribute_id, value: attribute.id %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_area :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
